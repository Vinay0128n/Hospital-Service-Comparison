# Database Configuration (Railway)
DATABASE_URL=postgresql://username:password@host:port/database_name
DATABASE_USERNAME=hospital_user
DATABASE_PASSWORD=your_password_here
DATABASE_HOST=your_railway_host
DATABASE_PORT=5432
DATABASE_NAME=hospital_comparison

# Spring Boot Configuration
SPRING_PROFILES_ACTIVE=prod
SPRING_DATASOURCE_URL=${DATABASE_URL}
SPRING_DATASOURCE_USERNAME=${DATABASE_USERNAME}
SPRING_DATASOURCE_PASSWORD=${DATABASE_PASSWORD}
SPRING_DATASOURCE_DRIVER_CLASS_NAME=org.postgresql.Driver

# JPA Configuration
SPRING_JPA_HIBERNATE_DDL_AUTO=update
SPRING_JPA_SHOW_SQL=false
SPRING_JPA_PROPERTIES_HIBERNATE_DIALECT=org.hibernate.dialect.PostgreSQLDialect

# Server Configuration
PORT=8080
SERVER_PORT=${PORT}

# CORS Configuration
SPRING_WEB_CORS_ALLOWED_ORIGINS=*
SPRING_WEB_CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
SPRING_WEB_CORS_ALLOWED_HEADERS=*
SPRING_WEB_CORS_ALLOW_CREDENTIALS=true

# Logging Configuration
LOGGING_LEVEL_ORG_SPRINGFRAMEWORK_WEB=WARN
LOGGING_LEVEL_ORG_HIBERNATE=WARN
LOGGING_LEVEL_COM_HOSPITAL_COMPARISON=INFO

# JVM Configuration
JAVA_OPTS=-Xmx512m -Xms256m

# Application Configuration
APP_NAME=Hospital Comparison API
APP_VERSION=1.0.0

# External API Configuration
NOMINATIM_API_URL=https://nominatim.openstreetmap.org
NOMINATIM_USER_AGENT=HospitalComparisonApp/1.0

# Security Configuration
JWT_SECRET=your_jwt_secret_key_here_make_it_long_and_random
JWT_EXPIRATION=86400000

# Redis Configuration (if using Redis for caching)
REDIS_URL=redis://default:password@host:port
REDIS_HOST=your_redis_host
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password

# Monitoring and Analytics
SENTRY_DSN=your_sentry_dsn_here
GOOGLE_ANALYTICS_ID=your_ga_id_here

# Email Configuration (if using email notifications)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USERNAME=your_email@gmail.com
EMAIL_PASSWORD=your_app_password
EMAIL_FROM=noreply@hospitalcomparison.com

# File Upload Configuration
MAX_FILE_SIZE=10MB
UPLOAD_DIR=/app/uploads

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=100
RATE_LIMIT_BURST=200
